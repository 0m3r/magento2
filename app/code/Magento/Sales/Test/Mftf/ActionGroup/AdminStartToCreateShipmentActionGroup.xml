<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminStartToCreateShipmentActionGroup">
        <annotations>
            <description>Clicks on 'Ship' on the Admin Orders view page. Validates that the URL and Page Title are correct.</description>
        </annotations>
        <click selector="{{AdminOrderDetailsMainActionsSection.ship}}" stepKey="clickShipAction"/>
        <seeInCurrentUrl url="{{AdminOrderNewShipmentPage.url}}" stepKey="seeNewShipmentUrl"/>
        <see selector="{{AdminHeaderSection.pageTitle}}" userInput="New Shipment" stepKey="seeNewShipmentInPageTitle"/>
    </actionGroup>
</actionGroups>
